{
  "openapi": "3.0.0",
  "info": {
    "title": "BackEnd para sitio SlimMom",
    "version": "1.0.0",
    "description": "API documentacion"
  },
  "servers": [
    {
      "url": "https://slim-mom-bd9397140525.herokuapp.com",
      "description": "Server Heroku"
    }
  ],
  "paths": {
    "/api/daily-rate/v1/daily-rate": {
      "post": {
        "summary": "Calculate daily caloric intake and get recommended products",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "height",
                  "desiredWeight",
                  "age",
                  "bloodType",
                  "currentWeight"
                ],
                "properties": {
                  "height": {
                    "type": "number",
                    "example": 170
                  },
                  "desiredWeight": {
                    "type": "number",
                    "example": 65
                  },
                  "age": {
                    "type": "number",
                    "example": 30
                  },
                  "bloodType": {
                    "type": "string",
                    "example": "A"
                  },
                  "currentWeight": {
                    "type": "number",
                    "example": 70
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully calculated daily caloric intake and fetched products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "calories": {
                      "type": "number",
                      "example": 1500
                    },
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string",
                            "example": "Apple"
                          },
                          "calories": {
                            "type": "number",
                            "example": 52
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Error when calculating",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Error when calculating"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
